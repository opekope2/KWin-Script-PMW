{
  "name": "kwin-pmw",
  "version": "0.2.0",
  "description": "KWin Per-Monitor Workspaces",
  "homepage": "https://github.com/opekope2/KWin-PMW#readme",
  "bugs": {
    "url": "https://github.com/opekope2/KWin-PMW/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opekope2/KWin-PMW.git"
  },
  "license": "GPL-3.0-or-later",
  "author": "opekope2",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "package": "npm run build && zip -r pmw.kwinscript contents/code metadata.json",
    "kde:install": "npm run build && kpackagetool6 -t KWin/Script -i .",
    "kde:update": "npm run build && kpackagetool6 -t KWin/Script -u .",
    "kde:uninstall": "kpackagetool6 -t KWin/Script -r pmw",
    "kwin:start": "qdbus6 org.kde.KWin /Scripting org.kde.kwin.Scripting.start",
    "kwin:stop": "qdbus6 org.kde.KWin /Scripting org.kde.kwin.Scripting.unloadScript pmw",
    "kwin:restart": "npm run kwin:stop && npm run kwin:start",
    "kwin:reload": "npm run kde:update && npm run kwin:restart",
    "logs": "journalctl -f QT_CATEGORY=js QT_CATEGORY=kwin_scripting"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.46.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}